    "/open-insurance/consents/v1": {
      "post": {
        "tags": ["Consent"],
        "summary": "Register a Consent",
        "description": "This route is responsible for registering new consents. To create, you have authenticate, with the token -> get yours in the LOGIN route.",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "loggedUser": {
                    "type": "object",
                    "properties": {
                      "CPF": {
                        "type": "string"
                      }
                    },
                    "required": ["CPF"]
                  },
                  "businessEntity": {
                    "type": "object",
                    "properties": {
                      "CNPJ": {
                        "type": "string"
                      }
                    },
                    "required": ["CNPJ"]
                  },
                  "permissions": {
                    "type": "array",
                    "items": [
                      {
                        "type": "string"
                      }
                    ]
                  },
                  "expirationDateTime": {
                    "type": "DateTime"
                  },
                  "transactionFromDateTime": {
                    "type": "DateTime"
                  },
                  "transactionToDateTime": {
                    "type": "DateTime"
                  }
                }
              },
              "examples": {
                "ConsentPost - Example": {
                  "value": {
                    "loggedUser": {
                      "CPF": "840.961.540-16"
                    },
                    "businessEntity": {
                      "CNPJ": "12.877.211/0001-96"
                    },
                    "permissions": [
                      "DAMAGES_AND_PEOPLE_OIL_CLAIM_READ",
                      "DAMAGES_AND_PEOPLE_RESPONSIBILITY_READ",
                      "DAMAGES_AND_PEOPLE_RESPONSIBILITY_POLICYINFO_READ",
                      "DAMAGES_AND_PEOPLE_RESPONSIBILITY_PREMIUM_READ",
                      "DAMAGES_AND_PEOPLE_RESPONSIBILITY_CLAIM_READ",
                      "DAMAGES_AND_PEOPLE_TRANSPORT_READ",
                      "DAMAGES_AND_PEOPLE_TRANSPORT_POLICYINFO_READ",
                      "DAMAGES_AND_PEOPLE_TRANSPORT_PREMIUM_READ"
                    ],
                    "expirationDateTime": "2022-10-22T08:30:00Z",
                    "transactionFromDateTime": "2021-01-01T00:00:00Z",
                    "transactionToDateTime": "2021-02-01T23:59:59Z"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Bad Request - Field(s) with unacceptable value.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "201": {
            "description": "Consent Created with success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "consentId": {
                          "type": "string"
                        },
                        "creationDateTime": {
                          "type": "string"
                        },
                        "status": {
                          "type": "string"
                        },
                        "statusUpdateDateTime": {
                          "type": "string"
                        },
                        "expirationDateTime": {
                          "type": "string"
                        },
                        "transactionFromDateTime": {
                          "type": "string"
                        },
                        "transactionToDateTime": {
                          "type": "string"
                        },
                        "userCPF": {
                          "type": "string"
                        },
                        "businessEntityCNPJ": {
                          "type": "string"
                        },
                        "permissions": {
                          "type": "array",
                          "items": [
                            {
                              "type": "object",
                              "properties": {
                                "productName": {
                                  "type": "string"
                                }
                              }
                            }
                          ]
                        }
                      }
                    },
                    "links": {
                      "type": "object",
                      "properties": {
                        "self": {
                          "type": "string"
                        },
                        "first": {
                          "type": "string"
                        },
                        "prev": {
                          "type": "string"
                        },
                        "next": {
                          "type": "string"
                        },
                        "last": {
                          "type": "string"
                        }
                      }
                    },
                    "meta": {
                      "type": "object",
                      "properties": {
                        "totalPages": {
                          "type": "integer"
                        },
                        "totalRecords": {
                          "type": "integer"
                        },
                        "requestDateTime": {
                          "type": "DateTime"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized! Authenticated but the document (cpf) in the params is not yours (authenticated user).",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
